### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term termite
# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
#set $menu dmenu_path | dmenu | xargs swaymsg exec
set $menu rofi -show run -theme .cache/wal/colors-rofi-dark.rasi | xargs swaymsg exec

set $browser firefox
set $keep keepassxc
set $mail thunderbird

# lock command
#set $lock "grim - | convert - -blur 3x3 /tmp/lock.png; swaylock -i /tmp/lock.png"
set $corrupter "corrupter -add 0 -mag 3 -boffset 5"
set $lock "grim -o DP-1 -t png - | "$corrupter" - > /tmp/lock-dp1.png; grim -o HDMI-A-2 -t png - | "$corrupter" - > /tmp/lock-hdmi.png ;swaylock -i DP-1:/tmp/lock-dp1.png -i HDMI-A-2:/tmp/lock-hdmi.png"

# theming
exec wal -R -a "80"
exec_always xrdb -merge $HOME/.Xresources
include "$HOME/.cache/wal/colors-sway"
output * bg $wallpaper fill
exec_always $HOME/.config/sway/set-colors-termite.sh 0.85

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
#output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
set $screen_left HDMI-A-2
set $screen_right DP-1
set $screen_laptop eDP-1

output $screen_left pos 0 0 res 1920x1080
output $screen_right pos 1920 0 res 1920x1080
bindswitch --reload --locked lid:on output $screen_laptop disable
bindswitch --reload --locked lid:off output $screen_laptop enable

